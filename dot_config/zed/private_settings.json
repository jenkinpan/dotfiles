{
  "git_panel": {
    "dock": "left"
  },
  "active_pane_modifiers": {
    "border_size": 2.0,
    "inactive_opacity": 0.8
  },
  "vim_mode": true,

  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "model_parameters": []
  },
  "terminal": {
    "font_family": ".ZedMono"
  },
  "project_panel": {
    "dock": "left",
    "auto_fold_dirs": false
  },
  // UI
  "relative_line_numbers": true,
  "gutter": {
    "line_numbers": true
  },
  "minimap": {
    "show": "auto"
  },
  "cursor_blink": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "linked_edits": true,
  "soft_wrap": "editor_width",
  "file_types": {
    "python": ["*.py"],
    "rust": ["*.rs"]
  },
  // UI Font setting
  "ui_font_family": ".ZedMono",
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  // Buffer Font setting
  "buffer_font_family": "Monaspace Neon NF",
  "buffer_font_size": 18.0,
  "buffer_font_features": {
    "calt": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true,
    "ss10": true,
    "liga": true
  },

  // Theme
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  }
}

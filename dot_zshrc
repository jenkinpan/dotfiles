# üìù CUSTOM FUNCTIONS

# Yazi shell wrapper - changes directory when exiting
yy() {
    local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
    yazi "$@" --cwd-file="$tmp"
    cwd="$(< "$tmp")" && [[ -n "$cwd" && "$cwd" != "$PWD" ]] && cd -- "$cwd"
    rm -f -- "$tmp"
}

# üõ†Ô∏è brew_completion_check: Verify Homebrew completions are loaded

brew_completion_check() {
  (( $+commands[brew] )) || { print "‚ùå Homebrew not found"; return 1 }

  local comp_dir="${HOMEBREW_PREFIX:-$(brew --prefix)}/share/zsh/site-functions"
  [[ -d "$comp_dir" ]] || { print "‚ùå Completion directory not found: $comp_dir"; return 1 }

  local -a missing=() loaded=() comp_files=("$comp_dir"/_*)
  (( ${#comp_files} )) || { print "‚ùå Completion directory is empty"; return 1 }

  local func cmd
  for file in "${comp_files[@]}"; do
    [[ -e "$file" ]] || continue
    func="${file:t}" cmd="${func#_}"

    # Special handling for npm (uses _npm_completion instead of _npm)
    if [[ "$cmd" == "npm" ]]; then
      (( $+functions[_npm_completion] )) && loaded+=("$cmd") || missing+=("$cmd")
    else
      (( $+functions[$func] )) && loaded+=("$cmd") || missing+=("$cmd")
    fi
  done

  print "üìä Completion Status:"
  print "   Total: ${#comp_files[@]} | ‚úÖ Loaded: ${#loaded[@]} | ‚ùå Missing: ${#missing[@]}"
  (( ${#loaded[@]} )) && print "   Loaded: ${(j:, :)loaded}"

  if (( ${#missing[@]} )); then
    print "   Missing: ${(j:, :)missing}"

    # Check if npm is in missing list and provide specific instructions
    if [[ ${missing[(i)npm]} -le ${#missing[@]} ]]; then
      print "   ‚ö†Ô∏è  npm requires special handling - it's already loaded via source in .zshrc"
    fi

    if read -q $'\nüîÑ Reload completions now? [y/N] '; then
      print "‚è≥ Reloading..." && autoload -Uz compinit && compinit -u -d "$ZSH_CACHE_DIR/.zcompdump" && print "‚úÖ Done"
    fi
  else
    print "üéâ All completions loaded!"
  fi
}

# üöÄ TOOL INITIALIZATION

# Note: These eval commands run on every startup

# Initialize atuin (disable up arrow key binding)
export ATUIN_NOBIND=true
eval "$(atuin init zsh)"
bindkey '^r' atuin-search

